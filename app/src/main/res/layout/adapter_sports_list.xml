<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/sport_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:background="@color/white">
        <ImageView
            android:id="@+id/img_sport"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/statenews" />



        <TextView
            android:id="@+id/tv_sports_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:textColor="@color/textcolor"
            android:gravity="top"
            android:textSize="@dimen/_11sdp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sports_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="4dp"
                android:textColor="@color/appcolor"
                android:text="@string/app_name"
                android:textSize="@dimen/_11sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_sports_datetime"
                >

                <ImageView
                    android:id="@+id/img_audio"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:layout_marginRight="5dp"
                    app:tint="@color/textcolor"
                    android:src="@drawable/ic_outline_headset_24" />

                <ImageView
                    android:id="@+id/img_download"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:layout_marginRight="5dp"
                    app:tint="@color/textcolor"
                    android:visibility="gone"
                    android:src="@drawable/ic_outline_get_app_24" />

                <ImageView
                    android:id="@+id/img_bookamrk"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:layout_marginRight="5dp"
                    app:tint="@color/textcolor"
                    android:src="@drawable/bookmarkicon" />

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:layout_marginRight="5dp"
                    app:tint="@color/textcolor"
                    android:src="@drawable/ic_outline_share_24" />


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</layout>